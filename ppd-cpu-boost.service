[Unit]
Description=CPU turbo boost sync with power-profiles-daemon
After=power-profiles-daemon.service
Requires=power-profiles-daemon.service

[Service]
Type=simple
ExecStart=/usr/bin/python3 -u /usr/bin/ppd-cpu-boost
StandardOutput=journal
StandardError=journal
Restart=on-failure
RestartSec=3s

[Install]
WantedBy=multi-user.target